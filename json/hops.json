{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id":
    "https://raw.githubusercontent.com/beerjson/beerjson/master/json/hops.json",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "HopVarietyBase": {
      "type": "object",
      "description":
        "HopVarietyBase provides unique properties to identify individual records of a hop variety",
      "properties": {
        "name": {
          "type": "string"
        },
        "origin": {
          "type": "string"
        },
		"form": {
              "type": "string",
              "enum": ["extract", "leaf", "leaf (wet)", "pellet", "powder", "plug"]
        },
        "alpha_acid_units": {
          "type": "number"
        },
        "beta_acid_units": {
          "type": "number"
        }
      },
      "required": ["name", "origin", "alpha_acid_units"]
    },
    "VarietyInformation": {
      "type": "object",
      "description":
        "VarietyInformation collects the attributes of a hop variety to store as record information",
      "allOf": [
        { "$ref": "#/definitions/HopVarietyBase" },
        {
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "aroma",
                "bittering",
                "flavor",
                "aroma/bittering",
                "bittering/flavor",
                "aroma/flavor",
                "aroma/bittering/flavor"
              ]
            },
            "notes": {
              "type": "string"
            },
            "percent_lost": {
              "$ref": "measureable_units.json#/definitions/PercentType"
            },
            "substitutes": {
              "type": "string"
            },
            "humulene": {
              "type": "number"
            },
            "caryophyllene": {
              "type": "number"
            },
            "cohumulone": {
              "type": "number"
            },
            "myrcene": {
              "type": "number"
            },
            "farnesene": {
              "type": "number"
            },
            "inventory": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "extract": {
                  "$ref": "measureable_units.json#/definitions/VolumeType"
                },
                "leaf": {
                  "$ref": "measureable_units.json#/definitions/MassType"
                },
                "leaf (wet)": {
                  "$ref": "measureable_units.json#/definitions/MassType"
                },
                "pellet": {
                  "$ref": "measureable_units.json#/definitions/MassType"
                },
                "powder": {
                  "$ref": "measureable_units.json#/definitions/MassType"
                },
                "plug": {
                  "$ref": "measureable_units.json#/definitions/MassType"
                }
              }
            }
          }
        }
      ]
    },
    "HopAdditionType": {
      "type": "array",
      "description":
        "HopAdditionType collects the attributes of a hop ingredient for use in a recipe hop bil",
      "items": {
        "allOf": [
          { "$ref": "#/definitions/HopVarietyBase" },
          {
            "form": {
              "type": "string",
              "enum": ["extract", "leaf", "leaf (wet)", "pellet", "powder", "plug"]
            }
          },
          {
            "use": {
              "type": "string",
              "enum": [
				"mash",
				"first wort",
				"boil",
				"continuous boil addition",
				"whirlpool",
				"hop stand",
                "dry hop",
                "hopback"
              ]
            }
          },
          {
            "amount": {
              "$ref": "measureable_units.json#/definitions/MassType"
            },
			"volume": {
              "$ref": "measureable_units.json#/definitions/VolumeType"
            },
            "time": {
              "$ref": "measureable_units.json#/definitions/TimeType"
            },
			"temperature": {
              "$ref": "measureable_units.json#/definitions/TemperatureType"
            }
          }
        ]
      }
    },
    "IBUEstimateType": {
      "properties": {
        "method": {
          "$ref": "#/definitions/IBUMethodType"
        }
      }
    },
    "IBUMethodType": {
      "type": "string",
      "enum": ["Rager", "Tinseth", "Garetz", "Other"]
    }
  }
}
